<div class="container">
    <div class="row mt-5 pt-5">
        <div class="col-sm-12 text-center">
            <h1 class="title">Choose a Category</h1>
        </div>
    </div>

    <div class="row" id="button-row">
        <div class="col-sm-12 justify-content-center text-center">
            <div class="dropdown">
                <button class="btn btn-lg greenBtn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Select
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    {{!-- this will populate a drop down menu with catagories --}}
                    {{#each data}}
                        {{> categories/categoryBlock}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>    
</div>


