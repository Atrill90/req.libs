 
<form>
    <div class="container">

        <div class="row justify-content-center">
            <div class="form-group">
                <label for="story-title">Story Title</label>
                <input type="text" class="form-control" id="story-title" placeholder="Story Title">
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="form-group">
                <label for="story-category">Story Category</label>
                <input type="text" class="form-control" id="story-category" placeholder="Story Category">
            </div>
        </div>

        <div class="row justify-content-center ">
            <div class="col-sm-9 justify-content-center">
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Example textarea</label>
                    <textarea class="form-control" id="add-story-parts" rows="3"></textarea>
                </div>
            </div>
            <div class="row">
                <button type="button" id="add-speech-part" class="btn btn-primary">Add Blank</button>
            </div>
        </div>
        <div>
            <div class="row justify-content-center">
                <div class="col-sm-9 justify-content-center">
                <div class="form-group">
                    
                    <textarea class="form-control" id="catch-speech"  rows="1" placeholder="verb ending in -ing"></textarea>
                </div>
                <button type="button" id="submit-story" class="btn btn-primary">Submit Story</button>
                </div>
            </div>
            </div>
    <span id="username" data-id="{{username}}"></span>
    </div>
</form>
