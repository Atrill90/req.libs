<div class="container mt-4">

  <div class="row">
    <div class="col-sm-6 offset-sm-3 text-center">
      <h1 class="title">Register</h1>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-sm-6 offset-sm-3">
      <form action="/auth/register" method="Post">
        <div class="form-group">
          <label for="email" class="label-font">Email address</label>
          <input type="email" class="form-control" id="email" value="{{email}}" name ="email" placeholder="Enter email">
        </div>
        <div class="form-group">
          <label for="userName" class="label-font">Username</label>
          <input type="text" class="form-control" id="userName" name="userName" value="{{userName}}" placeholder="Enter username">
        </div>
        <div class="form-group">
          <label for="password" class="label-font">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Password">
        </div>
        <button type="submit" class="btn authentication">Submit</button>
      </form>
    </div>
  </div>
</div>