<div class="container">
    <div class="row mt-5 pt-5">
        <div class="col-sm-12 text-center">
            <h1 class="title">Choose a Category</h1>
        </div>
    </div>

    <div class="row" id="button-row">
        <div class="col-sm-12 justify-content-center text-center">
            <div class="dropdown">
                <button class="btn btn-lg greenBtn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Select
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    {{!-- this will populate a drop down menu with catagories --}}
                    {{#each stories}}
                        {{> categories/categoryBlock}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>    
</div>



<form>
    <div class="container">
        <div class="row justify-content-center ">
            <div class="col-sm-9 justify-content-center">
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Example textarea</label>
                    <textarea class="form-control" id="add-story-parts" rows="3"></textarea>
                </div>
            </div>
            <div class="row">
                <button type="button" id="add-speech-part" class="btn btn-primary">Add Blank</button>
            </div>
        </div>
        <div>
            <div class="row justify-content-center">
                <div class="col-sm-9 justify-content-center">
                <div class="form-group">
                    
                    <textarea class="form-control" id="catch-speech"  rows="1" placeholder="noun ending in -ing"></textarea>
                </div>
                <button type="button" id="submit-story" class="btn btn-primary">Submit Story</button>
                </div>
            </div>
            </div>

    </div>
</form>




