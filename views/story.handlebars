<div class="container">
    <div class="row">
        <div class="col-sm-12 text-center">
            <h1 class="title">{{title}}</h1>
        </div>
    </div>

    <div class="row justify-content-center mt-4 mb-3">
        <div class="col-sm-8">
                <p class="text-center">
                    {{{story}}}

                </p>
        </div>
    </div>

