        <!--navbar items on the right-->
        <ul class="navbar-nav ml-auto">

          <!--if user is logged in-->
          {{#if user}}
            <li class="nav-item">
              <a class="nav-link" href="/profile/{{username}}"><b>Home</b></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/logout"><b>Logout</b></a>
            </li>

          <!--otherwise show these items-->
          {{else}}
            <li class="nav-item">
              <a class="nav-link" href="/"><b>Home</b></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/login"><b>Login</b></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/auth/register"><b>Register</b></a>
            </li>
          {{/if}}
        </ul>
      </div>
